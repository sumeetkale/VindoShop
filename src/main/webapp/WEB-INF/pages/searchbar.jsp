<!-- SEARCH AREA -->
<form class="search-area form-group" action="offerListing">
	<div class="container">
		<div class="row">
			<div class="col-md-8 clearfix">
				<label><i class="fa fa-search"></i><span>I am
						searching for</span> </label>
				<div class="search-area-division search-area-division-input">
					<input class="form-control" name="query" type="text"
						placeholder="Offer" />
				</div>
			</div>
			<div class="col-md-3 clearfix">
				<label><i class="fa fa-map-marker"></i><span>In</span> </label>
				<div class="search-area-division search-area-division-location">
					<input class="form-control" name="where" type="text"
						placeholder="Location" />
				</div>
			</div>
			<input type=hidden id="type" name="type" value="search">
			<div class="col-md-1">
				<button class="btn btn-block btn-yellow search-btn" type="submit">Search</button>
			</div>
		</div>
	</div>
</form>
<!-- END SEARCH AREA -->
